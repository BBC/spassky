#!/usr/bin/env ruby
$:.unshift(File.dirname(__FILE__) + '/../lib') unless $:.include?(File.dirname(__FILE__) + '/../lib')

require 'rubygems'
require 'spassky'
require 'spassky/server/app'

if ARGV[0] == "--port" || ARGV[0] == "-p"
  PORT = ARGV[1]
end
PORT ||= 9191

Spassky::Server::App.set :port, PORT
Spassky::Server::App.run!
